{
    "author": "stuyk",
    "type": "module",
    "scripts": {
        "clean": "shx rm -rf resources/core",
        "dev": "nodemon -e ts -e vue -w ./src -w ./webview -x pnpm start",
        "start": "pnpm script:kill && pnpm run /^build:.*/ && pnpm script:paths && pnpm script:imports && altv-server",
        "binaries": "pnpm altv-pkg",
        "[-] Build": "",
        "build:code": "pnpm clean && pnpm transpile && shx cp ./src/resource.toml ./resources/core/resource.toml",
        "build:webview": "pnpm webview:build",
        "[-] Scripts": "",
        "script:kill": "pnpm tsx ./scripts/pkill.ts",
        "script:webview": "pnpm tsx ./scripts/webview.ts",
        "script:imports": "pnpm tsx ./scripts/buildPluginImports.ts",
        "script:paths": "pnpm tsx ./scripts/pathResolver.ts",
        "[-] Transpile": "",
        "transpile": "sucrase ./src -d ./resources/core --transforms typescript -q",
        "transpile:verbose": "sucrase ./src -d ./resources/core --transforms typescript",
        "[-] Webview": "",
        "webview:build": "pnpm script:webview && pnpm -C webview run build",
        "webview:dev": "pnpm script:webview && pnpm -C webview run dev"
    },
    "devDependencies": {
        "@altv/types-client": "^16.2.2",
        "@altv/types-natives": "^16.2.0",
        "@altv/types-server": "^16.2.1",
        "@altv/types-shared": "^16.2.1",
        "@altv/types-webview": "^16.2.1",
        "@types/node": "^20.12.7",
        "altv-pkg": "^2.7.5",
        "autoprefixer": "^10.4.19",
        "fast-glob": "^3.3.2",
        "fkill": "^9.0.0",
        "nodemon": "^3.1.0",
        "postcss": "^8.4.38",
        "retypeapp": "^3.5.0",
        "shx": "^0.3.4",
        "sucrase": "^3.35.0",
        "tailwindcss": "^3.4.3",
        "tsx": "^4.7.2"
    },
    "dependencies": {
        "@vitejs/plugin-vue": "^5.0.4",
        "sjcl": "^1.0.8",
        "typescript": "^5.4.5",
        "vite": "^5.2.9",
        "vue": "^3.4.23",
        "vue-tsc": "^2.0.13"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "semi": true,
        "printWidth": 120
    }
}
