{
  "author": "stuyk",
  "type": "module",
  "scripts": {
    "start": "pnpm script:kill && pnpm build && pnpm script:paths && altv-server",
    "dev": "nodemon -e ts -w ./src -x pnpm start",
    "setup": "altv-pkg i",
    "clean": "shx rm -rf resources/core",
    "script:kill": "pnpm tsx ./scripts/pkill.ts",
    "script:imports": "pnpm tsx ./scripts/buildPluginImports.ts",
    "script:paths": "pnpm tsx ./scripts/pathResolver.ts",
    "build": "pnpm clean && pnpm transpile && shx cp ./src/resource.toml ./resources/core/resource.toml && pnpm script:imports",
    "transpile": "sucrase ./src -d ./resources/core --transforms typescript -q",
    "transpile:verbose": "sucrase ./src -d ./resources/core --transforms typescript"
  },
  "devDependencies": {
    "@altv/types-client": "^16.2.2",
    "@altv/types-natives": "^16.2.0",
    "@altv/types-server": "^16.2.1",
    "@altv/types-shared": "^16.2.1",
    "@altv/types-webview": "^16.2.1",
    "@types/node": "^20.12.7",
    "altv-pkg": "^2.7.5",
    "fast-glob": "^3.3.2",
    "fkill": "^9.0.0",
    "nodemon": "^3.1.0",
    "shx": "^0.3.4",
    "sucrase": "^3.35.0",
    "tsx": "^4.7.2"
  }
}
